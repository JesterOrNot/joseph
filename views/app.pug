    title= page.title

    include ./components/header.pug
    include ./components/layer.pug
    include ./components/layout.pug
    include ./components/section.pug
    include ./components/hero.pug
    include ./components/footer.pug
  body
    if dev
      //- Navbar etc...
      +header(page)

      mixin sectionView(section)
        if typeof section == "object"
          +section(section)

      mixin layoutView(layout)
        if typeof layout == "object"
          - let sectionList = layout.values;
          - let section = layout.section;
          +layout(layout)
            +sectionView(section)

            if Array.isArray(sectionList)
              each sections in sectionList
                - let section = sections.section;
                  +sectionView(section)

      .header-top-spot= dev
      main.main#swup.transition-fade
        - let layerLists = page.values;

        //- Page Layers
        if Array.isArray(layerLists)
          each layers in layerLists
            - let layer = layers.layer;  //- Display Custom Layer if it exists
            - let hero = layers.hero; //- Display Hero Layer if it exists

            if typeof hero == "object"
              +hero(hero)

            if typeof layer == "object"
              - let layout = layer.layout;
              - let layoutList = layer.values;
              +layer(layer)
                +layoutView(layout)

                if Array.isArray(layoutList)
                  each layouts in layoutList
                    - let layout = layouts.layout;
                    +layoutView(layout)

      .layer-action-center.layer-action-center-show
        article
          .layout-flex.layout-padding-horz
            section.layout-spacer
            section
              button#back-to-top.btn.layer-round.layout-padding-small.layer-surface.layer-shadow.layer-secondary-hover.style-secondary.style-hover-black(tabindex='0', type='button')
                span.btn-group
                  i.icon.style-font-sz-24 expand_less

              if page.noFooter
                button.copyright-btn#swup.btn.btn-default.layer-round.layout-padding-small.layer-surface.layer-shadow.layer-secondary-hover.style-secondary.style-hover-black(tabindex='0', type='button')
                  span.btn-group.style-font-sz-24
                    i.icon copyright
                    span.btn-spacer
                    span.btn-content 2019 Okiki Ojo

      if !page.noFooter
        +footer("Made with ‚ù§ by Okiki Ojo.")
    else
      section.layer
        - let _src = "/assets/josephojo-logo";
        - let _alt = "Assets city";
        .layer-image(class=_class)
          .load-img
            .img-contain.layout-contain.layout-contain-slim
              picture
                img(src!=`${_src}.jpg?quality=100`, alt=_alt inline loading="lazy")
              noscript Javascript is necesscary for an amazing experience.
                img.core-img(src!=`${_src}.jpg` alt=_alt loading="lazy" width="auto")

        - _src = "/assets/mountains";
        - _alt = "Assets city";
        .layer-image(class=_class)
          .load-img
            .img-contain
              picture
                source(srcset!=`${_src}.webp?w=50&quality=100&effect=blur:150` type='image/webp')
                img.core-img(src!=`${_src}.jpg?w=50&quality=100&effect=blur:150` alt=_alt inline width="auto" loading="lazy")
              picture
                img.placeholder-img(src!=`${_src}.jpg?w=50&quality=100&effect=blur:150`, alt=_alt inline loading="lazy")
              noscript Javascript is necesscary for an amazing experience.
                img.core-img(src!=`${_src}.jpg` alt=_alt loading="lazy" width="auto")

        article.layout-contain
          section.layout.layout-shorten.layer-overflow-hide.layer-max-height.layout-flex.layout-align-items-center.layout-justify-content-start
            section
              h3.style-secondary-dark.style-font-title.style-uppercase.layout-margin-dull-vert.layout-padding-vert-mini Joseph
              h1.style-white.style-bold.layer-title.style-uppercase.layout-margin-dull-vert-top Coming SOON
